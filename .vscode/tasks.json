{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "cd src ; make -j",
      "problemMatcher": "$gcc",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "cd src ; make allclean",
      "problemMatcher": "$gcc",
      "group": "build"
    },
    {
      "label": "Flash Betterfly",
      "type": "shell",
      "command": "cd src ; make -j -f teensy32.mak flash",
      "problemMatcher": "$gcc",
      "group": "build"
    },
    {
      "label": "Set to Teensy",
      "type": "shell",
      "command": "cd src ; rm Makefile ; ln -s teensy32.mak Makefile",
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "Set to Master/Slave",
      "type": "shell",
      "command": "cd src ; rm Makefile ; ln -s master-slave.mak Makefile",
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "Set to Dongle",
      "type": "shell",
      "command": "cd src ; rm Makefile ; ln -s 3piece.mak Makefile",
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "Flash Right",
      "type": "shell",
      "command": "cd src ; make flashr",
      "problemMatcher": "$gcc",
      "group": "build"
    },
    {
      "label": "Flash Left",
      "type": "shell",
      "command": "cd src ; make flashl",
      "problemMatcher": "$gcc",
      "group": "build"
    },
    {
      "label": "Flash Dongle",
      "type": "shell",
      "command": "cd src ; make flashm",
      "problemMatcher": "$gcc",
      "group": "build"
    }
  ]
}