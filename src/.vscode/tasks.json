{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "make -j",
      "problemMatcher": "$gcc",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "make allclean",
      "problemMatcher": "$gcc",
      "group": "build"
    },
    {
      "label": "Flash Betterfly",
      "type": "shell",
      "command": "make -j -f betterfly.mak flash",
      "problemMatcher": "$gcc",
      "group": "build"
    },
    {
      "label": "Set to Betterfly",
      "type": "shell",
      "command": "rm Makefile ; ln -s betterfly.mak Makefile",
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "Set to Dongle",
      "type": "shell",
      "command": "rm Makefile ; ln -s master.mak Makefile",
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "Set to Left",
      "type": "shell",
      "command": "rm Makefile ; ln -s left-btuart.mak Makefile",
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "Set to Right",
      "type": "shell",
      "command": "rm Makefile ; ln -s right-btuart.mak Makefile",
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "Flash Right",
      "type": "shell",
      "command": "make -j -f right-btuart.mak flash",
      "problemMatcher": "$gcc",
      "group": "build"
    },
    {
      "label": "Flash Left",
      "type": "shell",
      "command": "make -j -f left-btuart.mak flash",
      "problemMatcher": "$gcc",
      "group": "build"
    },
    {
      "label": "Flash Dongle",
      "type": "shell",
      "command": "make -j -f master.mak flash",
      "problemMatcher": "$gcc",
      "group": "build"
    }
  ]
}
