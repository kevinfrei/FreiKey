  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Tetris (win)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/out/tetris/tetris.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "console": "externalTerminal"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug ImageComp",
      "program": "${workspaceFolder}/out/imagecomp",
      "args": ["-w:174", "-h:174", "bitmaps/love.bin"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug Calculator",
      "program": "${workspaceFolder}/out/calculator/calculator",
      "cwd": "${workspaceFolder}"
    }
  ]
}
